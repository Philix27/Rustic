generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
  // url      = env("DATABASE_URL")
}

model Book {
  id               String            @id
  created_at       DateTime?         @default(now())
  updated_at       DateTime?         @updatedAt
  Profile          BookChapter?
  BookChapterTopic BookChapterTopic?
}

model BookChapter {
  id               String            @id
  title            String
  subtitle         String?
  book_id          String?           @unique
  created_at       DateTime?         @default(now())
  updated_at       DateTime?         @updatedAt
  Book             Book?             @relation(fields: [book_id], references: [id])
  BookChapterTopic BookChapterTopic?
}

model BookChapterTopic {
  id         String       @id
  title      String
  content    String?
  video_url  String?
  created_at DateTime?    @default(now())
  updated_at DateTime?    @updatedAt
  book_id    String?      @unique
  Book       Book?        @relation(fields: [book_id], references: [id])
  chapter_id String?      @unique
  chapter    BookChapter? @relation(fields: [chapter_id], references: [id])
}

model Blog {
  id         String    @id
  title      String
  subtitle   String?
  story      String
  created_at DateTime? @default(now())
  updated_at DateTime? @updatedAt
}

model Mcq {
  id         String    @id
  title      String
  subtitle   String?
  story      String
  created_at DateTime? @default(now())
  updated_at DateTime? @updatedAt
}
